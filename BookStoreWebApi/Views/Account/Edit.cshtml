@model BookStoreWebApi.ViewModel.EditProfile


@{
    ViewData["Title"] = "Edit";
}

<h2>Настройки профиля</h2>

<form asp-action="Edit" asp-controller="Account" method="post">
    <div class="form-inline">
        <div class="form-group">
            <label asp-for="Name">Имя</label>
            <input asp-for="Name" class="form-control-static" />
        </div>
        <div class="form-group">
            <label asp-for="SurName">Фамилия</label>
            <input asp-for="SurName" class="form-control-static" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default" value="Изменить" />
        </div>
    </div>
</form>